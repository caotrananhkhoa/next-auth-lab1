// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Run "npx prisma generator" to generate Prisma client models
// Run "npx prisma db push" to push the models to cloud database
generator client {
  provider = "prisma-client-js"
}

model User {
  id String @id @default(cuid())
  name String
}